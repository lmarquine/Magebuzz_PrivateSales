<?php$item = $this->getEvent();$_helper = Mage::helper('privatesale');?><?php if ($item->getEventId()): ?>  <?php  $now = date("Y-m-d H:i:s", Mage::getModel('core/date')->timestamp(time()));  $now_time = Mage::getModel('core/date')->timestamp(time());  if ($item['status'] == 2) {    $end_time = Mage::getModel('core/date')->timestamp($item['end_date']);    $duration = $end_time - $now_time;  } else if ($item['status'] == 1) {    $end_time = Mage::getModel('core/date')->timestamp($item['start_date']);    $duration = $end_time - $now_time;  }  $day = floor($duration / 86400);  $temp = 86400 * $day;  $hour = floor(($duration - $temp) / 3600);  $temp += 3600 * $hour;  $minute = floor(($duration - $temp) / 60);  $temp += 60 * $minute;  $second = $duration - $temp;  ?>  <div id='event-banner'>    <div id='title'>      <h3><?php echo $item['title'] ?></h3>    </div>    <img src="<?php echo $_helper->eventImage($item['image']); ?>">    <div class="event-info">      <div class="content">        <div id='title'>          <h3><?php if ($this->_isHappening()) {              echo $this->__("Event End In");            } else {              echo $this->__("Event Start In");            } ?></h3>        </div>        <div id='count_down_clock'>          <div id='real_clock'>            <span id='day'><?php echo $day ?></span><?php echo $this->__(" Days, ") ?>            <span id='hour'><?php echo $hour ?></span><?php echo $this->__(" Hours, ") ?>            <span id='minute'><?php echo $minute ?></span><?php echo $this->__(" Minutes, ") ?>            <span id='second'><?php echo $second ?></span><?php echo $this->__(" Seconds.") ?>          </div>        </div>      </div>    </div>  </div>  <script type="text/javascript">    var duration = <?php echo $duration ?>;    var temp;    function set() {      day = Math.floor(duration / 86400);      temp = 86400 * day;      hour = Math.floor((duration - temp) / 3600);      temp += 3600 * hour;      minute = Math.floor((duration - temp) / 60);      temp += 60 * minute;      second = duration - temp;    }    function update() {      duration = duration - 1;      set();      $('day').innerHTML = day;      $('hour').innerHTML = hour;      $('minute').innerHTML = minute;      $('second').innerHTML = second;      if (duration < 1) {        location.reload();        return;      }      else setTimeout(update, 1000);    }    window.onload = update;  </script><?php endif; ?>